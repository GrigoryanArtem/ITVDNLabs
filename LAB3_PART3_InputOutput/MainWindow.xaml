<Window x:Class="LAB3_PART3_InputOutput.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LAB3_PART3_InputOutput"
        xmlns:xceed="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="Colors"
        Height="150" Width="300" 
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen"
        Icon="main.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Grid.Background>
            <SolidColorBrush Color="{Binding ElementName=ctrlColorPicker, Path=SelectedColor}" />
        </Grid.Background>

        <TextBox
            x:Name="ctrlColorLabel"
            Grid.Row="0"
            Style="{DynamicResource SelectableTextBlock}"
            Text="{Binding ElementName=ctrlColorPicker, Path=SelectedColorText}" />

        <xceed:ColorPicker
            Grid.Row="1"
            x:Name="ctrlColorPicker"
            ShowTabHeaders="False"
            ShowStandardColors="False"
            ShowAvailableColors="False"
            ColorMode="ColorCanvas"            
            SelectedColorChanged="SelectedColorChanged" />
    </Grid>
</Window>
